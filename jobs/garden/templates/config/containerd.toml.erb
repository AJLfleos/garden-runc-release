root = "/var/vcap/data/containerd/root"
state = "/var/vcap/sys/run/containerd/state"
subreaper = true
oom_score = -999
disabled_plugins = [
  "aufs",
  "devmapper",
  "overlayfs",
  "zfs",
  "walking",
  "scheduler",
  "diff-service",
  "images-service",
  "namespaces-service",
  "snapshots-service",
  "diff",
  "healthcheck",
  "images",
  "namespaces",
  "snapshots",
  "version",
  "cri",
  "leases",
  "leases-service",
  "restart",
]

[grpc]
address = "/var/vcap/sys/run/containerd/containerd.sock"

[debug]
address = "/var/vcap/sys/run/containerd/debug.sock"
level = "info"
